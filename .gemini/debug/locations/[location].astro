---
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  const locations = [
    { params: { location: 'cowes' }, props: { name: 'Cowes', post_code: '3922' } },
    { params: { location: 'san-remo' }, props: { name: 'San Remo', post_code: '3925' } },
    { params: { location: 'ventnor' }, props: { name: 'Ventnor', post_code: '3922' } },
    { params: { location: 'newhaven' }, props: { name: 'Newhaven', post_code: '3925' } },
    { params: { location: 'smiths-beach' }, props: { name: 'Smiths Beach', post_code: '3922' } },
  ];
  return locations;
}

const { location } = Astro.params;
const { name, post_code } = Astro.props;

const title = `Handyman ${name} - Top Rated Maintenance & Repairs`;
const description = `Looking for a reliable Handyman in ${name} ${post_code}? Mr Home Assist provides deck repairs, property maintenance, and pre-sale prep for homes in ${name}.`;
---

<Layout title={title} description={description}>
    <main>
        {/* Dynamic Hero */}
        <section class="relative bg-slate-900 py-32 lg:py-48 overflow-hidden">
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/95 to-slate-900/40 z-10"></div>
                {/* Reusing hero image but focusing on local relevance */}
                <img src="/images/hero.webp" alt={`Handyman services in ${name}`} class="w-full h-full object-cover opacity-50" />
            </div>
            
            <div class="relative z-20 max-w-7xl mx-auto px-6">
                <span class="text-orange-500 font-bold tracking-widest uppercase mb-4 block">Service Area: {post_code}</span>
                <h1 class="text-5xl lg:text-7xl font-extrabold text-white mb-8 tracking-tight">
                    Handyman Services <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600">{name}</span>
                </h1>
                <p class="text-xl text-slate-300 max-w-2xl leading-relaxed mb-10">
                    We are the local property maintenance experts for <strong>{name}</strong>. From holiday home upkeep to fast deck repairs, we understand the specific needs of properties in {location.replace('-', ' ')}. 
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="#contact" class="px-8 py-4 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-lg transition-all shadow-lg shadow-orange-900/20 text-center">
                        Get a {name} Quote
                    </a>
                    <a href="tel:0400000000" class="px-8 py-4 bg-slate-800 hover:bg-slate-700 text-white font-bold rounded-lg transition-all border border-slate-700 text-center">
                        Call Us
                    </a>
                </div>
            </div>
        </section>

        {/* Local Content */}
        <section class="py-24 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid md:grid-cols-2 gap-16 items-center">
                    <div>
                        <h2 class="text-3xl font-bold text-slate-900 mb-6">Why {name} Locals Choose Us</h2>
                        <div class="space-y-6 text-slate-600 leading-relaxed">
                            <p>
                                Owning property in {name} comes with its own set of challenges, particularly the salt air and coastal weather. We specialize in maintaining homes in this specific area, ensuring your investment is protected.
                            </p>
                            <p>
                                Whether you have a holiday rental near the beach or a permanent residence, our team is just around the corner. We don't charge "travel time" for {name} jobs because we are already here.
                            </p>
                            <ul class="space-y-3 mt-8">
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-orange-500"></div>
                                    <span>Fast Response for {name} Residents</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-orange-500"></div>
                                    <span>Specific knowledge of {name} building styles</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <div class="w-2 h-2 rounded-full bg-orange-500"></div>
                                    <span>No Call-Out Fees for local jobs</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100">
                        <h3 class="font-bold text-xl text-slate-900 mb-6">Our Services in {name}</h3>
                        <div class="grid gap-4">
                            <a href="/services/deck-repairs" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-orange-600">Deck Repairs & Oiling</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                            <a href="/services/handyman-repairs" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-orange-600">General Handyman</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                             <a href="/services/holiday-home-maintenance" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-orange-600">Holiday Home Maintenance</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                             <a href="/services/pre-sale-prep" class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-all group">
                                <span class="font-medium text-slate-700 group-hover:text-orange-600">Pre-Sale Makeover</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-400 group-hover:text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="contact">
             {/* Contact form placeholder is handled by Layout, but we act as anchor */}
        </section>
    </main>
</Layout>
