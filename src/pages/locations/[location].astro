---
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';

export function getStaticPaths() {
  const locations = [
    { params: { location: 'location-a' }, props: { name: 'Location A', post_code: '0000' } },
    { params: { location: 'location-b' }, props: { name: 'Location B', post_code: '0000' } },
  ];
  return locations;
}

const { location } = Astro.params;
const { name, post_code } = Astro.props;

const title = `Service in ${name} | Business Name`;
const description = `Providing professional services in ${name} ${post_code}. Local experts for the ${name} area.`;
---

<Layout title={title} description={description}>
    <main>
        <section class="bg-slate-900 py-32 text-center text-white">
            <h1 class="text-5xl font-bold mb-6">Serving {name}</h1>
            <p class="text-xl max-w-2xl mx-auto">We are proud to offer our premium services to residents and businesses in {name} ({post_code}).</p>
        </section>
        
        <section class="py-20 px-6 max-w-7xl mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-slate-900">Why {name} chooses us</h2>
            <p class="mb-6">Content specific to the {name} area goes here.</p>
        </section>
    </main>
</Layout>
